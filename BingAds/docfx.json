{
  "build": {
    "content": [
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "exclude": [
          "**/obj/**",
          "**/includes/**",
          "**/bingads-11/**",
          "**/bingads-12/**",
          "**/guides/**",
          "README.md",
          "LICENSE",
          "LICENSE-CODE",
          "ThirdPartyNotices"
        ]
      },
      {
        "group": "bingads-11",
        "src": "bingads-11",
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "exclude": [
          "**/obj/**",
          "**/includes/**",
          "README.md",
          "LICENSE",
          "LICENSE-CODE",
          "ThirdPartyNotices"
        ]
      },
      {
        "group": "bingads-12",
        "src": "bingads-12",
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "exclude": [
          "**/obj/**",
          "**/includes/**",
          "README.md",
          "LICENSE",
          "LICENSE-CODE",
          "ThirdPartyNotices"
        ]
      }      
    ],
    "resource": [
      {
        "files": [
          "**/*.png",
          "**/*.jpg",
          "**/*.gif"
        ],
        "exclude": [
          "**/obj/**",
          "**/includes/**"
        ]
      },
      {
        "group": "bingads-11",
        "src": "bingads-11",
        "files": [
          "**/*.png",
          "**/*.jpg",
          "**/*.gif"
        ],
        "exclude": [
          "**/obj/**",
          "**/includes/**"
        ]
      },
      {
        "group": "bingads-12",
        "src": "bingads-12",
        "files": [
          "**/*.png",
          "**/*.jpg",
          "**/*.gif"
        ],
        "exclude": [
          "**/obj/**",
          "**/includes/**"
        ]
      }     
    ],
    "overwrite": [],
    "externalReference": [],
    "globalMetadata": {
      "contributors_to_exclude": ["openpublishingbuild", "Pacort", "saldana"],      
      "defaultDevLang": "csharp",
      "uhfHeaderId": "MSDocsHeader-BingAds",
      "searchScope": ["Bing Ads"],
      "breadcrumb_path": "/BingAds/breadcrumb/TOC.json",
      "extendBreadcrumb": "true",
      "titleSuffix": "Bing Ads"
    },
    "fileMetadata": {
      "ms.service": 
      { 
        "guides/**.yml": "bing-ads",
        "ad-insight-service/**.yml": "bing-ads-ad-insight-service",
        "customer-billing-service/**.yml": "bing-ads-customer-billing-service",
        "bulk-service/**.yml": "bing-ads-bulk-service",
        "campaign-management-service/**.yml": "bing-ads-campaign-management-service",
        "customer-management-service/**.yml": "bing-ads-customer-management-service",
        "reporting-service/**.yml": "bing-ads-reporting-service",
        "shopping-content/**.yml": "bing-ads-shopping-content",
        "hotel-ads/**.yml": "hotel-ads",
        "hotel-feed/**.yml": "hotel-ads-hotel-feed",
        "hotel-api-service/**.yml": "hotel-ads-hotel-service",
        "pos-feed/**.yml": "hotel-ads-pos-feed",
        "transaction-message/**.yml": "hotel-ads-transaction-message",
        "hint-message/**.yml": "hotel-ads-hint-message",
        "query-message/**.yml": "hotel-ads-query-message",
        "query-control-message/**.yml": "hotel-ads-query-control-message"    
      }
    },
    "template": [],
    "dest": "bingads",
    "groups": {
      "bingads-11": {
        "dest": "",
        "moniker_range": "= bingads-11"
      },
      "bingads-12": {
        "dest": "",
        "moniker_range": "= bingads-12"
      }
    }
  }
}
